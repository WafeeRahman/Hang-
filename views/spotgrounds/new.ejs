<% layout('/layouts/boilerplate') %>
    
   
<link rel="stylesheet" href="/stylesheets/login.css">

<div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card bg-transparent p-4">
                <h5 class="card-title">Create a New Spot</h5>
                <div class="card-body">
                    <form action="/spotgrounds" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label class="form-label" for="title">Title</label>
                            <input class="form-control" type="text" id="title" name="spotgrounds[title]" required>
                            <div class="valid-feedback">
                                Looking Good!
                            </div>
                        </div>
        
                        <div class="mb-3">
                            <label class="form-label" for="location">Address</label>
                            <input class="form-control" type="text" id="location" name="spotgrounds[location]" required>
                            <div class="valid-feedback">
                                Looking Good!
                            </div>
                        </div>
                
        
                        <div class="mb-3">
                            <label class="form-label" for="description">Description</label>
                            <textarea class="form-control" type="text" name="spotgrounds[description]" id="description"
                                required></textarea>
                            <div class="valid-feedback">
                                Looking Good!
                            </div>
                        </div>
        
                        <div class="mb-3">
                            <label class="form-label" for="Price">Price</label>
                            <div class="input-group">
                                <span class="input-group-text" id="basic-addon1">$</span>
        
                                <input type="text" class="form-control" id="price" placeholder="0" name="spotgrounds[price]"
                                    required>
                            </div>
                            <div class="valid-feedback">
                                Looking Good!
                            </div>
                        </div>
        
                        <div class="mb-3">
                            <label for="thumbnail" class="form-label">Add An Image</label>
                            <input class="form-control" type="file" id="thumbnail" name="thumbnail" multiple>
                        </div>
        
                        <button class="btn bg-success text-light">Add Spot</button>
                        <a href="/spotgrounds" class="btn bg-danger text-light">Back</a>

                    </form>
                </div>
            </div>
        </div>
    </div>