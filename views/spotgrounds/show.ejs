<% layout('/layouts/boilerplate') %>

    <div class="row">
        <div class="col-6 ">
            <div class="card mb-3">
                <img src="<%=spot.thumbnail%>" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= spot.title %>
                    </h5>
                    <p class="card-text">
                        <%= spot.description %>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <%= spot.location %>
                    </li>
                    <li class="list-group-item">$<%= spot.price %>/Night</li>
                </ul>
                <div class="card-footer">
                    <a href="/spotgrounds" class="card-link btn btn-success">Back</a>
                    <a href="/spotgrounds/<%=spot._id%>/edit" class="card-link btn btn-warning">Edit</a>

                    <form class="d-inline" action="/spotgrounds/<%=spot._id%>?_method=DELETE" method="POST">
                        <button class="btn btn-danger"> Delete Post </button>
                    </form>

                </div>
                <div class="card-footer text-muted">
                    2 Days Ago
                </div>
            </div>


          

        </div>
        <div class="col-6">
            <h2>Leave a Review</h2>
            <form action="/spotgrounds/<%=spot._id%>/reviews" method="POST" class="mb-3 validated-form" novalidate>
                <div class="mb-3">
                    <label class="form-label" for="rating">Leave a Rating</label>
                    <input class="form-range" type="range" min="1" max="5" name="review[rating]" id="rating">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="body">Leave A Review</label>
                    <textarea class="form-control" name="review[body]" id="body" cols="30" rows="10" required></textarea>
                    <div class="valid-feedback">
                        Looking Good!
                    </div>
                </div>
                <button class="btn btn-success">Submit</button>
            </form>

            <% for (let review of spot.reviews) { %>
                <div class="card mb-3">
                    <div class="card-body border border-dark rounded p-2 fw-bold">
                        <h5 class="card-title">Rating: <%=review.rating %></h5>
                        <p class="card-text">Review: <%=review.body %>
                        <form action="/spotgrounds/<%=spot._id%>/reviews/<%=review._id%>?_method=DELETE" method="POST">
                            <button class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </div>
                </div>
               
            <% } %>
        </div>
    </div>